		img(src="http://lorempixel.com/60/30", alt="Icon Placeholder")
		//- END COMPANY LOGO
		
		p.subhead Define your wardrobe with accessories

		section.wardrobeDisplay
			//- the images may require a transparent background
			//- the background colour will have to be set
			//- little boxes are 211x211px
			div.left
				div.top
					div.left
						//- dimensions 211x420px
						h3 Sweater
						p.copy Bring our style
						p.price $125
						+purchaseShader1
					div.right
						div.top
							+purchaseShader1
						div.bottom
							+purchaseShader1
				div.bottom
					div.left
						+purchaseShader1
					div.right
						+purchaseShader1
			div.right
				div.top
					div.left
						+purchaseShader1
					div.right
						+purchaseShader1
				div.bottom
					div.left
						//- dimensions 420x420px
						div.top
						div.bottom
							div.copy
								h3 Full Options
								p.copy Body and Smiling
								p.price $399
							+purchaseShader1
					div.right
						+purchaseShader1

