							div.slash
				+linkTemplate033115a('Women',womenLink)
					li
						a(href=womenLink) Women
							div.slash
				+linkTemplate033115a('Men',menLink)
					li
						a(href=menLink) Men
							div.slash
				+linkTemplate033115a('Accessories',accessoriesLink)
					li
						a(href=accessoriesLink) Accessories
							div.slash
				+linkTemplate033115a('Dress',dressLink)
					li
						a(href=dressLink) Dress
							div.slash
				+linkTemplate033115a('Sales-Off',saleOffLink)
